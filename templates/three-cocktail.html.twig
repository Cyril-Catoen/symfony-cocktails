{% extends 'base.html.twig' %}

	{% block metatitle %}
	<!-- Nomme l'onglet du navigateur -->
	<title>Cocktail n°3</title>
	{% endblock metatitle %}

	{% block main %}
    <main>
			<h1>Cocktail n°3</h1>
            <div id="article-order">
                {% for cocktail in cocktails %}

					<article class="list-articles article">

						<h2>{{ cocktail.nom }}</h2>
                        <div class="cocktail-card"><img class="article-image" src="{{ cocktail.image }}" /></div>
                        <ul>{% for ingredient in cocktail.ingredients %} <li>{{ ingredient }}</li>{% endfor %}</ul>
						<p class="article-content">{{ cocktail.description }}</p>
						<p class="article-date">{{ cocktail.date_creation | date('d-m-Y')}}</p>
                        <p>{{ cocktail.id }}</p>		

					</article>
				
			    {% endfor %}

            </div>
		</main>
		{% endblock main %}